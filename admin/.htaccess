# Security for Admin Panel
<Files "gallery-data.json">
    Order allow,deny
    Deny from all
</Files>

<Files "config.php">
    Order allow,deny
    Deny from all
</Files>

# Prevent directory listing
Options -Indexes

# Set index files
DirectoryIndex index.php index.html

# PHP Security
php_flag display_errors on
php_flag log_errors on

# Error handling - show error page if PHP fails
ErrorDocument 500 /admin/fehler.html
